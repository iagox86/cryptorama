<header>
  <div class="logo-row">
    <img src="images/logo.png" alt="logo" class="logo">
  </div>
</header>

<p>TODO: Put some narrative here</p>

<p>TODO: Let them know if they've finished the last level</p>

<ul>
<% levels.each do |level| %>
  <% if level[:open] %>
    <li>
      <a href='<%= level[:url] %>'><%= level[:name] %></a>
      <% if level[:completed] %>
        <span class="completed">&check;</span>
      <% end %>
    </li>
  <% elsif level[:show] %>
    <li><%= level[:name] %> (not open yet!)</li>
  <% end %>
<% end %>
</ul>
